{
  "extends": "./ts-node-esm-config.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "jsx": "react",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "lib": ["ES2020"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
} 